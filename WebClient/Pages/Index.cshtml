@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">LangService Client</h1>

    <form class="mb-3" method="post">
        <button class="btn btn-outline-secondary" asp-route-handler="All">Show All</button>
    </form>

    <form class="input-group mb-3" method="post">
        <input class="form-control" placeholder="Lang id" type="text" name="Lang.Id" />
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" asp-route-handler="One">One</button>
        </div>
    </form>

    <form class="input-group mb-3" method="post">
        <input class="form-control" placeholder="Lang id" type="text" name="Lang.Id" />
        <input class="form-control" placeholder="Year" type="text" name="Lang.Year" />
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" asp-route-handler="Create">Create</button>
        </div>
    </form>

    <form class="input-group mb-3" method="post">
        <input class="form-control" placeholder="Lang id" type="text" name="Lang.Id" />
        <input class="form-control" placeholder="Year" type="text" name="Lang.Year" />
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" asp-route-handler="Edit">Edit</button>
        </div>
    </form>

    <form class="input-group mb-3" method="post">
        <input class="form-control" placeholder="Lang id" type="text" name="Lang.Id" />
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" asp-route-handler="Delete">Delete</button>
        </div>
    </form>

    <hr />
    <div>@Model.JsonAnswer</div>
</div>